<UserControl x:Class="GeoSearch.Widgets.CheckBoxWithImageText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel Name="StackPanelArea1" Orientation="Horizontal" Background="White">
        <CheckBox Name="isSelected_CheckBox" VerticalAlignment="Center" IsChecked="False"/>
        <Image Name="Image1" Source="/GeoSearch;component/images/resourceTypes/map.png" Height="30" Width="30" Stretch="Fill" Margin="7,0,0,0" VerticalAlignment="Center"/>
        <TextBlock Name="Title"  Text="xxxxxxx" Foreground="Black" FontStyle="Normal" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14"/>
    </StackPanel>
</UserControl>
