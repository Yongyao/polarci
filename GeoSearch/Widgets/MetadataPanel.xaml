                                <TextBox Height="20" Name="label_Server_content" Width="auto" Text="{Binding attributes_Service.ServerURL}" FontSize="13" Grid.Row="3" Grid.Column="1" Visibility="{Binding Path=attributes_Service.ServerURL, Converter={StaticResource ResourceAttributesVisibilityConverter}}" MaxWidth="800" TextWrapping="Wrap" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                                <sdk:Label Height="20" Name="label_ServicePerameters" Width="auto" Content="Service Perameters" FontSize="13" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top"/>
                                <TextBox Height="20" Name="label_ServicePerameters_content" Width="auto" Text="{Binding attributes_Service.ServicePerameters}" FontSize="13" Grid.Row="4" Grid.Column="1" Visibility="{Binding Path=attributes_Service.ServicePerameters, Converter={StaticResource ResourceAttributesVisibilityConverter}}" MaxWidth="800" TextWrapping="Wrap" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--Contains Operations-->
                    <Border BorderBrush="Silver" BorderThickness="1" Height="auto" HorizontalAlignment="Stretch" Margin="3,3,3,3" Name="border_ContainsOperations" VerticalAlignment="Stretch" Width="auto" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding Path=ContainsOperations, Converter={StaticResource ResourceAttributesVisibilityConverter}}">
                        <StackPanel Height="auto"  Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3,3,3,3">
                            <sdk:Label Height="25" Width="200" FontSize="14" FontWeight="Bold" Content="Contains operations" HorizontalAlignment="Left"/>
                            <ListBox Height="auto" Name="listBox_ContainsOperationsItem" Width="auto" SelectionMode="Multiple" ItemsSource="{Binding ContainsOperations}" ItemTemplate="{StaticResource ContaintsOperationItem}" BorderThickness="0" />
                        </StackPanel>
                    </Border>

                </Grid>
            </StackPanel>    
        </Border>

        <!--Point of contact panel-->
        <Border BorderBrush="Silver" BorderThickness="1" Height="auto" HorizontalAlignment="Stretch" Margin="3,3,3,3" Name="border_contact" VerticalAlignment="Stretch" Width="auto" Grid.Row="1" Grid.Column="0">
            <StackPanel Height="auto"  Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3,3,3,3">
                <sdk:Label Height="25" Width="150" FontSize="14" FontWeight="Bold" Content="Point of contact" HorizontalAlignment="Left"/>
                <Grid Height="auto"  Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="8,3,3,3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <sdk:Label Height="20" Name="label_IndividualName" Width="auto" Content="Individual name" FontSize="13" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0"/>
                    <TextBox Height="20" Name="label_IndividualName_content" Width="auto" Text="{Binding pointOfContact_IndividualName}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="0" Grid.Column="1" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_OrganizationName" Width="auto" Content="Organization name" FontSize="13" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Height="20" Name="label_OrganizationName_content" Width="auto" Text="{Binding pointOfContact_OrganisationName}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="1" Grid.Column="1" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_PositionName" Width="auto" Content="Position name" FontSize="13" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                    <TextBox Height="20" Name="label_PositionName_content" Width="auto" Text="{Binding pointOfContact_PositionName}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="2" Grid.Column="1" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_Role" Width="auto" Content="Role" FontSize="13" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.Row="3" Grid.Column="0" Grid.RowSpan="3"/>
                    <TextBox Height="auto" Name="label_Role_content" Width="auto" Text="{Binding pointOfContact_Role}" FontSize="13" MaxWidth="300" HorizontalAlignment="Left"  Grid.Row="3" Grid.Column="1" Grid.RowSpan="3" TextWrapping="Wrap" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_Voice" Width="auto" Content="Voice" FontSize="13" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_Voice_content" Width="auto" Text="{Binding pointOfContact_Voice}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="0" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_Facsimile" Width="auto" Content="Facsimile" FontSize="13" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_Facsimile_content" Width="auto" Text="{Binding pointOfContact_Facsimile}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="1" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_Email" Width="auto" Content="Email address" FontSize="13" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_Email_content" Width="auto" Text="{Binding pointOfContact_Email}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="2" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_Contact_OnlineResource" Width="auto" Content="Online resource" FontSize="13" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_Contact_OnlineResource_content" Width="auto" Text="{Binding pointOfContact_OnlineResource}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="3" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_City" Width="auto" Content="City" FontSize="13" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_City_content" Width="auto" Text="{Binding pointOfContact_City}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="4" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_AdministrativeArea" Width="auto" Content="Administrative area" FontSize="13" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_AdministrativeArea_content" Width="auto" Text="{Binding pointOfContact_AdministrativeArea}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="5" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_PostalCode" Width="auto" Content="Postal code" FontSize="13" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_PostalCode_content" Width="auto" Text="{Binding pointOfContact_PostalCode}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="6" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_Country" Width="auto" Content="Country" FontSize="13" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="3"/>
                    <TextBox Height="20" Name="label_Country_content" Width="auto" Text="{Binding pointOfContact_Country}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="7" Grid.Column="4" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>

                    <sdk:Label Height="20" Name="label_DeliveryPoint" Width="auto" Content="Delivery point" FontSize="13" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="3" Grid.RowSpan="2" VerticalContentAlignment="Center" VerticalAlignment="Top" />
                    <TextBox Height="40" Name="label_DeliveryPoint_content" Width="auto" Text="{Binding pointOfContact_DeliveryPoint}" FontSize="13" HorizontalAlignment="Left"  Grid.Row="8" Grid.Column="4" Grid.RowSpan="2" VerticalAlignment="Top" MaxWidth="300" IsReadOnly="True"  Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                    <Rectangle  Grid.Row="0" Grid.Column="2" Grid.RowSpan="10" Width="1" Height="180" Fill="Silver" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
