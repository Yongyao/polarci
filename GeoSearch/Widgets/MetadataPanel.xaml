                            </StackPanel>
                            
                            <Grid Height="auto"  Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="8,3,3,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"/>
