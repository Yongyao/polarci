                                        <Border.Background>
                                            <ImageBrush ImageSource="/GeoSearch;component/images/Status-image-loading-icon.png" />
                                        </Border.Background>
                                        <Image Height="160" Width="160" Stretch="UniformToFill" Name="Image_GraphicOverview_content" Source="{Binding attributes_Dataset.GraphicOverview_FileURL}" HorizontalAlignment="Center"/>
