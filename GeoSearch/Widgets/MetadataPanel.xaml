                                       ZoomLevel="{Binding BBox, ElementName=MyMap2, Mode=TwoWay}"/>-->
                                <!--<Canvas Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="250">
                                    <Canvas.Background>
                                        <ImageBrush ImageSource="/GeoSearch;component/images/extentBackground.jpg" />
                                    </Canvas.Background>
                                    <Border Name="border_ExtentBBox" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{Binding BBox, Converter={StaticResource BBoxBorderMarginConverter}}" Width="{Binding BBox, Converter={StaticResource BBoxWidthConverter}}" Height="{Binding BBox, Converter={StaticResource BBoxHeightConverter}}" BorderThickness="3" BorderBrush="#FFF28A13" Background="#FFF2E113" Opacity="0.3" Padding="0" />
                                    <Border Name="border_ExtentBBox1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{Binding BBox, Converter={StaticResource BBoxBorderMarginConverter}}" Width="{Binding BBox, Converter={StaticResource BBoxWidthConverter}}" Height="{Binding BBox, Converter={StaticResource BBoxHeightConverter}}" BorderThickness="3" BorderBrush="#FFF28A13" Background="{x:Null}" Opacity="1" Padding="0" />
                                </Canvas>-->
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--Descriptive Keywords-->
                    <Border BorderBrush="Silver" BorderThickness="1" Height="auto" HorizontalAlignment="Stretch" Margin="3,3,3,3" Name="border_DescriptiveKeywords" VerticalAlignment="Stretch" Width="auto" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding Path=DescriptiveKeywords, Converter={StaticResource ResourceAttributesVisibilityConverter}}">
                        <StackPanel Height="auto"  Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3,3,3,3">
                            <sdk:Label Height="25" Width="200" FontSize="14" FontWeight="Bold" Content="Descriptive keywords" HorizontalAlignment="Left"/>
                            <Grid Height="auto"  Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="8,3,3,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*"/>
                                    <ColumnDefinition Width="30*"/>
                                    <ColumnDefinition Width="40*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <sdk:Label Height="20" Name="label_ThesaurusCategory" Width="auto" Content="Thesaurus category" FontSize="13" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" FontWeight="SemiBold" />
