<UserControl x:Class="GeoSearch.Widgets.GeneralPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="#FFFFFFAF">
        <Popup Name="PopupPage">
            <ScrollViewer Height="auto" HorizontalAlignment="Center" Name="scrollViewer1" VerticalAlignment="Center" Width="auto" MaxWidth="800" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0">
                <TextBox Name="TextBox_Content" Text="TextBlock" Background="#FFFFFFAF"/>
            </ScrollViewer>
        </Popup>
    </Grid>
</UserControl>
